generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String   // We will hash this
  entries   Entry[]
  createdAt DateTime @default(now())

  resetToken     String? 
  resetTokenExp  DateTime?

}

model Entry {
  id        String   @id @default(uuid())
  content   String
  mood      String   // "Happy", "Sad", etc.
  trackName String?  // "Lofi Girl - Study Beats"
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}