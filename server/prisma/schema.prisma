generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  password      String
  entries       Entry[]
  
  // New Profile Fields
  dob           DateTime?
  gender        String?

  // Auth fields
  resetToken    String?
  resetTokenExp DateTime?
  isVerified    Boolean   @default(false)
  otp           String?
  otpExp        DateTime?

  createdAt     DateTime  @default(now())
}

model Entry {
  id        String   @id @default(uuid())
  content   String
  mood      String
  trackName String?
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}